<%- include ('../partials/admin/header.ejs') %>
<%- include ('../partials/admin/sidebar.ejs') %>
<div class="main-content">

    <div class="page-content">
        <div class="container-fluid">

            <!-- start page title -->
            <div class="row">
                <div class="col-12">
                    <div class="page-title-box d-flex align-items-center justify-content-between">
                        <h4 class="mb-0">QUẢN LÝ DANH MỤC</h4>

                        <div class="page-title-right">
                            <ol class="breadcrumb m-0">
                                <li class="breadcrumb-item"><a href="javascript: void(0);">Forms</a></li>
                                <li class="breadcrumb-item active">Basic Elements</li>
                            </ol>
                        </div>

                    </div>
                </div>
            </div>
            <!-- end page title -->

            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">

                            <h4 class="card-title">Thêm danh mục</h4>
                            <p class="card-title-desc">Lưu ý: Nếu là danh mục cha thì chọn Danh mục gốc. Nếu là danh mục con thì chọn Danh mục cha</p>
                            <div class="form-group row">
                                
                            </div>

                            <div class="form-group row">
                                <label for="example-search-input" class="col-md-2 col-form-label">Tên danh mục</label>
                                <div class="col-md-10">
                                    <input class="form-control txtNameCategory" type="search" value="" placeholder="Tên danh mục" id="example-search-input">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="example-search-input" class="col-md-2 col-form-label">Upload hình ảnh</label>
                                <div class="col-md-10">
                                    <input class="form-control" type="file" value="" placeholder="Tên danh mục" id="example-search-input">
                                </div>
                            </div>
                            <div class="form-group row" style="margin-left: 500px;">
                                <button type="submit" class="btn btn-primary w-md btnAddCategory">Thêm</button>
                            </div>
                            
                        </div>
                    </div>
                </div> <!-- end col -->
            </div>
            
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Danh sách Danh mục</h4>
                        <p class="card-title-desc">Danh mục cha sẽ có màu.</p>    
                        
                        <div class="table-responsive">
                            <table class="table mb-0">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>ID</th>
                                        <th>Tên danh mục</th>
                                        <th>Trạng thái hoạt động</th>
                                        <th>Tùy chọn</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if (listCategory && listCategory.length) { %>
                                        <% listCategory.forEach((category, index) => { %>
                                            <tr class="table-success btnOpenCategoryChild" _isOpen='0' id="<%=category._id%>" >
                                                <th scope="row"><%=index + 1%></th>
                                                <td>#<%=String(category._id).slice(-6)%></td>
                                                <td><%=category.name%></td>
                                                <td><%=STATUS_CATEGORY[category.status].text%></td>
                                                <td>
                                                    <a href="javascript:void(0);" class="px-3 text-primary btnUpdate" data-toggle="tooltip" data-placement="top" title="" data-original-title="Edit"><i class="uil uil-pen font-size-18"></i></a>
                                                    <a href="javascript:void(0);" class="px-3 text-danger btnRemove" _categoryID="<%=category._id%>" data-toggle="tooltip" data-placement="top" title="" data-original-title="Delete"><i class="uil uil-trash font-size-18"></i></a>
                                                </td>
                                            </tr>
                                        <% }) %>
                                    <% } %>
                                </tbody>
                            </table>

                        </div>

                    </div>
                </div>
            </div>
            <!-- end row -->
            
        </div> <!-- container-fluid -->
    </div>
    <!-- End Page-content -->
    
</div>
<%- include ('../partials/admin/footer.ejs') %>
<%- include ('./utils/add_category-script.ejs') %>

